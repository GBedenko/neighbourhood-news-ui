<head>
	<link href="/css/welcome.css" type="text/css" rel="stylesheet" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <title>Local News Application - Genaro Bedenko</title>
</head>

<div class="welcomePage">
    
  <div class="welcomeBanner" align="center">
      <h1>Welcome to the Local News Application!</h1>
      <h2>Please Login to your Account, or Register to create a new one:</h2>
  </div>

  <div class="row">
    <div class="loginBox">
      <form id="loginForm" action="/login" method="post">
        <h3 align="center">Login to your Account</h3>
        <div class="form-group">
          <label for="enterUsername">Username:</label>
          <input type="text" class="form-control" name="username" placeholder="Enter Username">
        </div>
        <div class="form-group">
          <label for="enterPassword">Password:</label>
          <input type="password" class="form-control" name="password" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
    </div>

    <div class="registerBox">
      <form id="registerForm" action="/register" method="post">
        <h3 align="center">Register your Account</h3>
        <div class="form-group">
          <label for="enterEmail">Email Address:</label>
          <input type="email" class="form-control" name="email" placeholder="Enter Email Address" autofocus>
        </div>
        <div class="form-group">
          <label for="enterUsername">Username:</label>
          <input type="text" class="form-control" name="username" placeholder="Enter New Username">
        </div>
        <div class="form-group">
          <label for="enterPassword">Password:</label>
          <input type="password" class="form-control" name="password" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-primary">Register Account</button>
      </form>
    </div>
    
  </div>
</div>