<head>
	<link href="/css/event.css" type="text/css" rel="stylesheet" />
</head>

<div class="event">
    <h1>{{this.event.title}}</h1>
    <h3>Date: {{this.event.date}}</h3>
    <h3>Time: {{this.event.time}}</h3>
    <div class="row">
        <div class="eventImage">
            <img width="500" height="300" src="{{this.event.image}}"/>
        </div>
        <div class="eventContent">
            <p>{{this.event.content}}</p>
        </div>
    </div>  
    <br/>
    <div class="sharingOptions">
        <div class="row">
            <ul>
                <li><a href="/like_event/{{this.article._id}}">Like this post</a><p>{{this.event.likes}} people like this event</p></li>
                <li><a href="/dislike_event/{{this.article._id}}">Dislike this post</a><p>{{this.event.dislikes}} people dislike this event</p></li>
            </ul>
            <ul>
                <li><a href="/like_user/{{this.article.user}}">Like this user</a><p>{{this.user.likes}} people like this user</p></li>
                <li><a href="/dislike_user/{{this.article.user}}">Dislike this user</a><p>{{this.user.dislikes}} people dislike this user</p></li></li>
            </ul>
        </div>
    </div>
</div>