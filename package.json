{
  "name": "bedenkog-local-news-ui",
  "version": "1.0.0",
  "description": "API for UI only (Part of Local News Application)",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "jest --coverage -c jest.config.json",
    "acceptance-test": "jest -c jest.config.acceptance.json",
    "start-and-acceptance-test": "./start-acceptance-tests.sh",
    "watch": "node_modules/.bin/jest --coverage --watchAll"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": -10
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.coventry.ac.uk/340CT-1819SEPJAN/bedenkog-local-news-ui"
  },
  "author": "bedenkog",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^3.0.2",
    "eslint": "^5.8.0",
    "express": "^4.16.4",
    "express-handlebars": "^3.0.0",
    "jest": "^23.6.0",
    "nock": "^10.0.2",
    "node-cmd": "^3.0.0",
    "puppeteer": "^1.10.0",
    "supertest": "^3.3.0"
  }
}
